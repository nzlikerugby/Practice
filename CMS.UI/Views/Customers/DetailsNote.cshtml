@model CMS.Model.Note

@{
    string customerId = ViewBag.CustomerId;
    ViewData["Title"] = "DetailsNote";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Detail">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <fieldset>
                <legend>Note Details</legend>
                <div class="form-group">
                    <label asp-for="Content" class="control-label"></label>
                    <input asp-for="Content" class="form-control" disabled />
                </div>
            </fieldset>
            <hr />
        </form>
    </div>
</div>
<div>
    <a asp-action="Notes" asp-route-id="@customerId">Back to List</a>
</div>
